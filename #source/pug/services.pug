doctype html
html(lang="ru")
  //- Подключение файла с миксинами
  include mixins.pug 
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="/css/services.css")
    link(rel="shortcut icon" href="../img/icons/favicon.svg")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    title Услуги и цены

  body
    include menu.pug

    +pageName('Услуги и цены')

    section(class="services-tabs-section")
      .container
        .row
          .tabs
            - var i = 1;
              while i < 6
                input(type="radio" name="tab-control" id='tab' + i++ )
            ul
              +addTab(1, "../img/icons/snowflake-services.svg", "Snow Hill зимой")
              +addTab(2, "../img/icons/sun-services.svg", "Snow Hill летом")
              +addTab(3, "../img/icons/building-services.svg", "Проживание")
              +addTab(4, "../img/icons/thermometer-services.svg", "Бани")
              +addTab(5, "../img/icons/coffee-services.svg", "Кафе и рестораны")
            .slider
              .indicator
            .content
              section
                h2 Snow Hill зимой
                .cards.winter
              section
                h2 Snow Hill летом
                .cards.summer
              section
                h2 Проживание
                .cards.hotels
              section
                h2 Бани
                .cards.bathhouses
              section
                h2 Кафе и рестораны
                .cards.restaurants

    +preloader
    include footer.pug

  script(src="/js/jquery-1.11.3.min.js")
  script(src="/js/services.js")

